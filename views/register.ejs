<!DOCTYPE html>
<html>
<head>
	<title>Registration Page</title>
	<link rel="stylesheet" type="text/css" href="css/csslogin.css">
	<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
	<script src="apps.js"></script>
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-md-10 offset=md-1">
				<div class="row">
					<div class="col-md-5 register-left">
						<img src="image/doigt.png">
						<h3>Join Us</h3>
						<p>Subscribe to House Rental</p>
						<button type="button" class="btn btn-primary"> <a href="/login">connectez-vous</a></button>
					</div>
					<div class="col-md-7 register-right">
						<h2>Register Here</h2>
						<div class="register-form">
							<form action="/creer" method="post">
								<div class="form-group">
								<input type="text" name ="name" class="form-control" placeholder="Name">
								</div>
								<div class="form-group">
								<input type="text" name="username" class="form-control" placeholder="Username">
								</div>
								<div class="form-group">
								<input type="email" name="email" class="form-control" placeholder="Email">
								</div>
								<div class="form-group">
								<input type="Password" name ="password" class="form-control" placeholder="Password">
								</div>
								<input type="submit" class="btn btn-primary">Register</input><br>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- <a href="http://localhost:3000/liste">Liste des utilisateurs</a> -->
</body>
</html>